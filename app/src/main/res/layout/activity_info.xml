<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Info"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:background="@color/purple_700"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/group_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Group"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group_label"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:text=""
        android:textSize="24dp"
        android:layout_marginTop="16sp"/>

    <TextView
        android:id="@+id/last_call_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/group"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:text="Last Call Date"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/last_call_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/last_call_date_label"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:text=""
        android:textSize="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/last_call_time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/last_call_date"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:text="Last Call Time"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/last_call_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/last_call_time_label"
        app:layout_constraintStart_toStartOf="@id/group_label"
        android:text=""
        android:textSize="24dp"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>